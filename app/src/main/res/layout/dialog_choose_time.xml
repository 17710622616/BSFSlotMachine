<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWight">

    <TextView
        android:id="@+id/dialog_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toolbar_bg"
        android:padding="20dp"
        android:text="投幣時間[預計]"
        android:textSize="20sp"
        android:textColor="@color/colorWight"/>

    <TimePicker
        android:id="@+id/dialog_time_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/dialog_time_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:text="確認"
        android:textSize="18sp"
        android:textColor="@color/colorWight"/>
</LinearLayout>