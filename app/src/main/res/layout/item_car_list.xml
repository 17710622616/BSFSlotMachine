<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:id="@+id/item_carlist_iv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorWight"
        android:src="@mipmap/car_sample"
        android:padding="5dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorWight"
        android:padding="5dp">
        <TextView
            android:id="@+id/item_carlist_licensenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車牌號碼：00000"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/item_carlist_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌：林肯"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/item_carlist_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車型：SUV"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/item_carlist_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型號：MKC"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/item_carlist_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車輛類型：私家車"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</LinearLayout>