<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_car_parts_ivs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/item_car_parts_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="名稱"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_car_parts_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="MOP100"
            android:textColor="@color/colorLoginOutRed"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/item_car_parts_original_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="MOP500"
            android:textColor="@color/colorDrakGray"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>
    </LinearLayout>
</LinearLayout>