<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.bs.john_li.bsfslotmachine.BSSMView.BSSMHeadView
        android:id="@+id/seller_des_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/seller_des_logo"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/seller_des_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家名稱"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:padding="5dp"/>

            <View
                style="@style/UnderLineTextView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="聯絡商家"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:padding="5dp"/>

            <View
                style="@style/UnderLineTextView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seller_des_address_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="地址"
                    android:textSize="15sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/seller_des_tel_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/tel"
                    android:padding="5dp"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家簡介"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>


            <View
                style="@style/UnderLineTextView"/>

            <TextView
                android:id="@+id/seller_des_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorDrakGray"
                android:textSize="15sp"/>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>