<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWight"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">

    <EditText
        android:id="@+id/old_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_car_edit"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/new_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_car_edit"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/new_pw_affirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_car_edit"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/update_pw_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="確認"
        android:textSize="18sp"
        android:textColor="@color/colorWight"
        android:gravity="center"
        android:background="@drawable/shape_btn_bg"/>
</LinearLayout>