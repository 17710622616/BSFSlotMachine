<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWight"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/item_discount_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="MOP$10.0"
                android:textSize="30sp"
                android:textColor="@color/colorLoginOutRed"/>
            <TextView
                android:id="@+id/item_discount_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="滿MOP$20.0可用"
                android:textSize="16sp"
                android:textColor="@color/colorDrakGray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_discount_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀請代金券"
                android:textColor="@color/colorDrakGray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_discount_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="2017/10/05到期"
                android:textColor="@color/colorDrakGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_discount_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="限用號碼：65****31"
                android:textColor="@color/colorDrakGray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/new_discount_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/new_discount"/>
</FrameLayout>