<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDrakGray">

    <LinearLayout
        android:id="@+id/item_second_car_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0.5dp"
        android:background="@color/colorWight"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_second_car_iv"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@color/colorWight"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/img_loading_list" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWight"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_second_car_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="本田 2011款 SUV"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_second_car_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="2017年"
                    android:textColor="@color/colorDrakGray"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/item_second_car_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="/2.8萬公里"
                    android:textColor="@color/colorDrakGray"
                    android:textSize="13sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/item_second_car_popularity_values"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="人氣值：800"
                    android:textColor="@color/colorDrakGray"
                    android:textSize="12sp"
                    android:layout_gravity="start"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_second_car_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="MOP100萬"
                    android:textColor="@color/colorWayOringe"
                    android:textSize="20sp" />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>