<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/shape_toolbar_bg"
        android:paddingTop="25dp">
        <ImageView
            android:id="@+id/search_sm_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:layout_gravity="center"
            android:src="@mipmap/back"/>

        <android.support.v7.widget.SearchView
            android:id="@+id/search_sm_sv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_noresult_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <ImageView
            android:src="@mipmap/search_noresult"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/search_noresult"
            android:textColor="@color/colorDrakGray"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>