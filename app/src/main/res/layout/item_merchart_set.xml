<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWight">

    <RadioButton
        android:id="@+id/item_ms_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:focusable="false"/>

    <TextView
        android:id="@+id/item_ms_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="單次洗車"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/item_ms_original_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原價MOP0.0"
        android:textColor="@color/colorDrakGray"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/item_ms_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOP0.0"
        android:textColor="@color/colorWayOringe"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>