            <LinearLayout
                android:id="@+id/publish_own_second_car_inside_body_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="車身內部"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_inside_body_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請填寫車身內部"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_test_conclusion_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="試駕結論"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_test_conclusion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請填寫試駕結論"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
