                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請選擇排量"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_country_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="出廠國家"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_country_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請填寫出廠國家"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_delivery_time_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="出廠時間"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_delivery_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請選擇出廠時間"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_config_info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="配置信息"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_config_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請填寫配置信息"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_repiar_statr_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="維修狀態"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_repiar_statr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請填寫維修狀態"
