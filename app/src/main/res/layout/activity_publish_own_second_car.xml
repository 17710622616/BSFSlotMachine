                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請填寫車輛狀態"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_color_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="顏        色"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_color_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請選擇顏色"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_model_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="車輛類別"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/publish_own_second_car_model_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請選擇車輛類別"
                    android:textSize="16sp"
                    android:textColor="@color/colorDrakGray"/>
            </LinearLayout>

            <View
                style="@style/UnderLineTextView"/>
            <LinearLayout
                android:id="@+id/publish_own_second_car_exhaust_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorWight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="排        量"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
