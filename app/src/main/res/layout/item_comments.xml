<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWight">

    <ImageView
        android:id="@+id/item_commentor_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/head_girl"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/item_commentor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_commentor_iv"
        android:textColor="@color/colorDeepBlue"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_comments_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_commentor_tv"
        android:layout_toRightOf="@id/item_commentor_iv"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/item_comments_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_below="@id/item_comments_tv"
        android:layout_toRightOf="@id/item_commentor_iv"
        android:text="剛剛"
        android:textColor="@color/colorDrakGray"
        android:textSize="12sp"
        android:gravity="center_vertical"/>
</RelativeLayout>