<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 導航欄. -->
        <item name="colorPrimary">@color/colorSkyBlue</item>
        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/colorSkyBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/colorLightGray</item>
        <!--<item name="android:windowBackground">@drawable/shape_toolbar_bg</item>-->
    </style>

    <style name="BSSMTheme" parent="BaseTheme">
    </style>

    <style name="ParkingOrderItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/colorWight</item>
    </style>

    <style name="MineItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:background">@color/colorWight</item>
    </style>

    <style name="MineItemTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MineItemImageView">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MineItemImageNext">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/next_black</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="MineItemPropertyValueTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MineItemPropertyNameTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorDrakGray</item>
    </style>

    <style name="SettingDetialTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/colorDrakGray</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="UnderLineTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/colorLineGray</item>
    </style>

    <style name="CutLineTextView">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLineGray</item>
    </style>

    <style name="PayMentMethodIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>
