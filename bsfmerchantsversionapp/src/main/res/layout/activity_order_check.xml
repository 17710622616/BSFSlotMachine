<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/order_check_left_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="訂單詳情"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="訂單編號："
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:padding="5dp"/>

        <View
            style="@style/UnderLineTextView"/>

        <TextView
            android:id="@+id/order_check_orderno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:padding="5dp"/>

        <View
            style="@style/UnderLineTextView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="洗車券碼："
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:padding="5dp"/>

        <View
            style="@style/UnderLineTextView"/>

        <TextView
            android:id="@+id/order_check_couponno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:padding="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/check_order_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="確認消費"
        android:textColor="@color/colorWight"
        android:textSize="20sp"
        android:padding="15dp"
        android:background="@color/colorWayOringe"/>
</LinearLayout>